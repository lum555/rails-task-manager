<div class="container">
  <h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<p><% if @task.completed %>
  <p><i class="fas fa-check-square"></i> Finished!</p>
  <% else %>
  <p><i class="fas fa-square"></i> Not finished yet</p>
  <% end %></p>

  <%= link_to "Edit", edit_tasks_path(@task), :class => "btn btn-default btn-warning"  %>

  <%= link_to "Return to index", tasks_path, :class => "btn btn-default btn-info"  %>
</div>
